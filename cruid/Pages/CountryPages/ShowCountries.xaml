<Page x:Class="cruid.Pages.CountryPages.ShowCountries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cruid.Pages.CountryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowCountries">

    <Grid Background="White">
        <DataGrid x:Name = "CountriesGrid" AutoGenerateColumns="False" Margin="53,54,70,43" FontFamily="Arial Black" FontSize="16" Background="#FFB75C5C">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="*" Binding="{Binding CountryID}"/>
                <DataGridTextColumn Header="Название страны" Width="*" Binding="{Binding CountryName}"/>
                <DataGridTextColumn Header="Число игроков" Width="*" Binding="{Binding PlayerCount}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
