<Page x:Class="cruid.Pages.Countries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cruid.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Countries">

    <Grid Background="White">
        <Button Content="Добавить страну" HorizontalAlignment="Left" Margin="50,51,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="AddCountry"/>
        <Button Content="Удалить страну" HorizontalAlignment="Left" Margin="555,51,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="DeleteCountry"/>
        <Button Content="Показать все страны" HorizontalAlignment="Center" Margin="0,296,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="ShowCountries"/>
    </Grid>
</Page>
