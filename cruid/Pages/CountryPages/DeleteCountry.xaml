<Page x:Class="cruid.Pages.CountryPages.DeleteCountry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cruid.Pages.CountryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteCountry">

    <Grid Background="White">
        <Button Content="Удалить" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Width="289" Height="36" Click="CountryDelete"/>
        <Rectangle HorizontalAlignment="Center" Height="290" Margin="0,48,0,0" Stroke="Black" VerticalAlignment="Top" Width="560" Fill="Black" RadiusX="23.019" RadiusY="23.019"/>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border HorizontalAlignment="Center" Height="33" VerticalAlignment="Top" Width="420" Margin="0,104,0,0">
            <Grid>
                <Rectangle HorizontalAlignment="Center" Height="33" Stroke="White" VerticalAlignment="Center" Width="420" Fill="White" RadiusX="12.796" RadiusY="12.796"/>
                <TextBox x:Name="countrynameBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="400" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}"/>
            </Grid>
        </Border>
        <TextBlock HorizontalAlignment="Left" Margin="190,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Foreground="White"><Run Language="ru-ru" Text="Введите название страны"/></TextBlock>
    </Grid>
</Page>
