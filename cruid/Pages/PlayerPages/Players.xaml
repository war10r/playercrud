<Page x:Class="cruid.Pages.Players"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cruid.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Players">

    <Grid Background="White">
        <Button Content="Добавить игроков" HorizontalAlignment="Left" Margin="50,51,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="AddPlayers"/>
        <Button Content="Удалить игроков" HorizontalAlignment="Left" Margin="525,51,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="DeletePlayers"/>
        <Button Content="Изменить игроков" HorizontalAlignment="Left" Margin="50,310,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="UpdatePlayers"/>
        <Button Content="Показать всех игроков" HorizontalAlignment="Left" Margin="525,310,0,0" VerticalAlignment="Top" Height="88" Width="202" Click="ShowPlayers"/>
    </Grid>
</Page>
